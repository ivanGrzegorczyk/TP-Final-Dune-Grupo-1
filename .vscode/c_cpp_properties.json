{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include/SDL2"
            ],
            // added manually, allow IDE to parse ifdef statements correctly.
            // CMakeLists is responsible for setting these
            "defines": ["SDL2PP_WITH_IMAGE=TRUE","SDL2PP_WITH_TTF=TRUE"],
            "compilerPath": "/usr/bin/clang-11",
            "cStandard": "c17",
            "cppStandard": "c++14",
            "intelliSenseMode": "linux-clang-x64"
        }
    ],
    "version": 4
}